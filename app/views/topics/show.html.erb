<h1><%= @topic.name %></h1>
<% if user_is_authorized_for_topics? %>
  <%= link_to "Edit Topic", edit_topic_path, class: 'btn btn-success' %>
  <%= link_to "Delete Topic", @topic, method: :delete, class: 'btn btn-danger', data: {confirm: 'Are you sure you want to delete?'} %>
<% end %>

<div class="row">
  <div class="col-md-8">
    <p class="lead"><%= @topic.description %></p>
      <% @topic.posts.each do |p| %>
        <div class="media">
          <div class="media-body">
            <h4 class="media-heading">
              <%= link_to p.title, topic_post_path(@topic, p) %>
          </h4>
        
          <small>
          <% 
=begin %>
            submitted <%= time_ago_in_words(@topic.post.created_at) %> ago by <%= post.user.name %> <br>
         <%= post.comments.count %> Comments

        #### not recognizing post.  why is that? ####

         <% 
=end %>
          </small>

        </div>
      </div>
    <% end %>
  </div>
  <% if current_user %>
  <div class="col-md-4">
    <%= link_to "New Post", new_topic_post_path(@topic), class: 'btn btn-success' %>
    <% end %>
  </div>
</div>
